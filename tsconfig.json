{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"],
            "tests": ["tests/*"],
            "@components/*": ["src/*"]
        },
        "jsx": "react-native",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"]
}
